<p id="notice"><%= notice %></p>

<h1>Guestbooks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Archived</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guestbooks.each do |guestbook| %>
      <tr>
        <td><%= guestbook.title %></td>
        <td><%= guestbook.archived %></td>
        <td><%= link_to 'Show', guestbook %></td>
        <td><%= link_to 'Edit', edit_guestbook_path(guestbook) %></td>
        <td><%= link_to 'Destroy', guestbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Guestbook', new_guestbook_path %>
