<div class="page-header">
  <h1>Manage Accounts</h1>
</div> 

<div class="panel panel-default">
  <div class="panel-body">
   <%= form_for @user, :class => "form-inline", :url => { :action => '_create' } do |form| %>
    <% if @error != nil %>
        <div class="alert alert-danger" role="alert"><%= @error %></div>
    <% end %>

    <div class="form-group">
      <%= form.label :email, :class => "sr-only" %>
      <%= form.text_field :email, type: 'email', :class => "form-control", :placeholder => "Email" %>
    </div>

    <div class="form-group">
      <%= form.label :password, :class => "sr-only" %>
      <%= form.password_field :password, :class => "form-control", :placeholder => "Password" %>
    </div>

    <div class="form-group">
      <%= form.submit :class => "btn btn-primary", :value => "Create Account" %>
    </div>
    <% end %>
  </div>
</div> 

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table table-tool table-striped" style="border-collapse: collapse;">
      <tr>
        <th>Email Address</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <div class="btn-group btn-group-xs" role="group" aria-label="actions">
            <a data-method="delete" href="/users/<%= user.id %>/_destroy" type="button" class="btn btn-danger glyphicon glyphicon-trash"><span class="hidden-xs">Delete</span></a>
          </div>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>